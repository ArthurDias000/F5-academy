<resources>

    <!-- Estilo para o PopupMenu moderno -->
    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColorPrimary">#000000</item> <!-- Corrigido para texto escuro -->
    </style>

    <!-- Estilo para TextInputLayout sem borda com cantos arredondados -->
    <style name="NoBorderInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Estilo personalizado para campos de EditText -->
    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>
